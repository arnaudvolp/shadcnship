      "content": "import { cn } from \"@/lib/utils\";\n\ninterface Step {\n  step: number;\n  title: string;\n  description: string;\n  image?: string;\n}\n\ninterface HowItWorks01Props {\n  tagline?: string;\n  heading?: string;\n  description?: string;\n  steps?: Step[];\n  className?: string;\n}\n\nconst StepCard = ({ step, isLast }: { step: Step; isLast: boolean }) => {\n  return (\n    <div className=\"relative flex flex-col\">\n      {/* Step Badge with connecting line */}\n      <div className=\"relative flex items-center mb-6\">\n        <span className=\"inline-flex items-center justify-center px-3 py-1 text-sm font-medium rounded-full border bg-background z-10\">\n          Step {step.step}\n        </span>\n        {/* Dotted line - hidden on last item and on mobile */}\n        {!isLast && (\n          <div className=\"hidden lg:block absolute left-full top-1/2 w-full border-t border-dashed border-border\" />\n        )}\n      </div>\n\n      {/* Content */}\n      <div className=\"space-y-3 mb-6\">\n        <h3 className=\"text-xl font-semibold tracking-tight\">{step.title}</h3>\n        <p className=\"text-muted-foreground text-sm leading-relaxed\">\n          {step.description}\n        </p>\n      </div>\n\n      {/* Image */}\n      <div className=\"aspect-4/3 w-full rounded-xl bg-muted overflow-hidden\">\n        {step.image ? (\n          <img\n            src={step.image}\n            alt={step.title}\n            className=\"size-full object-cover\"\n          />\n        ) : (\n          <div className=\"size-full flex items-center justify-center\">\n            <StepIllustration step={step.step} />\n          </div>\n        )}\n      </div>\n    </div>\n  );\n};\n\nconst StepIllustration = ({ step }: { step: number }) => {\n  // Simple placeholder illustrations\n  const illustrations: Record<number, React.ReactNode> = {\n    1: (\n      <svg\n        viewBox=\"0 0 120 90\"\n        fill=\"none\"\n        className=\"w-32 h-24 text-muted-foreground/40\"\n      >\n        <rect\n          x=\"10\"\n          y=\"10\"\n          width=\"40\"\n          height=\"30\"\n          rx=\"2\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <rect\n          x=\"15\"\n          y=\"45\"\n          width=\"30\"\n          height=\"20\"\n          rx=\"2\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <rect\n          x=\"70\"\n          y=\"20\"\n          width=\"40\"\n          height=\"50\"\n          rx=\"2\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <circle cx=\"90\" cy=\"35\" r=\"8\" stroke=\"currentColor\" strokeWidth=\"1.5\" />\n        <line\n          x1=\"82\"\n          y1=\"55\"\n          x2=\"98\"\n          y2=\"55\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <line\n          x1=\"82\"\n          y1=\"60\"\n          x2=\"94\"\n          y2=\"60\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n      </svg>\n    ),\n    2: (\n      <svg\n        viewBox=\"0 0 120 90\"\n        fill=\"none\"\n        className=\"w-32 h-24 text-muted-foreground/40\"\n      >\n        <rect\n          x=\"20\"\n          y=\"15\"\n          width=\"80\"\n          height=\"60\"\n          rx=\"3\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <line\n          x1=\"20\"\n          y1=\"30\"\n          x2=\"100\"\n          y2=\"30\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <rect\n          x=\"30\"\n          y=\"40\"\n          width=\"25\"\n          height=\"8\"\n          rx=\"1\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <rect\n          x=\"30\"\n          y=\"52\"\n          width=\"60\"\n          height=\"4\"\n          rx=\"1\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <rect\n          x=\"30\"\n          y=\"60\"\n          width=\"45\"\n          height=\"4\"\n          rx=\"1\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <circle cx=\"85\" cy=\"22\" r=\"3\" fill=\"currentColor\" />\n      </svg>\n    ),\n    3: (\n      <svg\n        viewBox=\"0 0 120 90\"\n        fill=\"none\"\n        className=\"w-32 h-24 text-muted-foreground/40\"\n      >\n        <rect\n          x=\"15\"\n          y=\"20\"\n          width=\"50\"\n          height=\"50\"\n          rx=\"3\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <circle\n          cx=\"40\"\n          cy=\"38\"\n          r=\"10\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <path d=\"M35 55 L45 55\" stroke=\"currentColor\" strokeWidth=\"1.5\" />\n        <rect\n          x=\"75\"\n          y=\"25\"\n          width=\"30\"\n          height=\"8\"\n          rx=\"1\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <rect\n          x=\"75\"\n          y=\"38\"\n          width=\"25\"\n          height=\"6\"\n          rx=\"1\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <rect\n          x=\"75\"\n          y=\"48\"\n          width=\"30\"\n          height=\"6\"\n          rx=\"1\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <rect\n          x=\"75\"\n          y=\"58\"\n          width=\"20\"\n          height=\"6\"\n          rx=\"1\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n      </svg>\n    ),\n    4: (\n      <svg\n        viewBox=\"0 0 120 90\"\n        fill=\"none\"\n        className=\"w-32 h-24 text-muted-foreground/40\"\n      >\n        <rect\n          x=\"10\"\n          y=\"25\"\n          width=\"45\"\n          height=\"40\"\n          rx=\"3\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <polyline\n          points=\"20,55 30,45 40,50 50,35\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n          fill=\"none\"\n        />\n        <rect\n          x=\"65\"\n          y=\"25\"\n          width=\"45\"\n          height=\"40\"\n          rx=\"3\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <line\n          x1=\"75\"\n          y1=\"35\"\n          x2=\"100\"\n          y2=\"35\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <line\n          x1=\"75\"\n          y1=\"45\"\n          x2=\"95\"\n          y2=\"45\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <line\n          x1=\"75\"\n          y1=\"55\"\n          x2=\"90\"\n          y2=\"55\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n        />\n        <circle cx=\"60\" cy=\"10\" r=\"6\" stroke=\"currentColor\" strokeWidth=\"1.5\" />\n        <path\n          d=\"M57 10 L60 13 L66 7\"\n          stroke=\"currentColor\"\n          strokeWidth=\"1.5\"\n          fill=\"none\"\n        />\n      </svg>\n    ),\n  };\n\n  return illustrations[step] || illustrations[1];\n};\n\nconst HowItWorks01 = ({\n  tagline = \"How it works\",\n  heading = \"Work normally. We handle the rest.\",\n  description = \"Get started in minutes with our simple 4-step process. No complex setup required.\",\n  steps = [\n    {\n      step: 1,\n      title: \"Create your account\",\n      description:\n        \"Sign up in seconds with your email or connect with your favorite tools. No credit card required to get started.\",\n    },\n    {\n      step: 2,\n      title: \"Configure your workspace\",\n      description:\n        \"Set up your workspace with our intuitive dashboard. Import existing data or start fresh with our templates.\",\n    },\n    {\n      step: 3,\n      title: \"Invite your team\",\n      description:\n        \"Collaborate seamlessly by inviting team members. Set permissions and roles to keep everyone aligned.\",\n    },\n    {\n      step: 4,\n      title: \"Launch and iterate\",\n      description:\n        \"Go live with confidence. Monitor performance with built-in analytics and optimize as you grow.\",\n    },\n  ],\n  className,\n}: HowItWorks01Props) => {\n  return (\n    <section className={cn(\"container mx-auto px-6 py-12 md:py-24\", className)}>\n      {/* Header */}\n      <div className=\"mx-auto max-w-2xl text-center mb-12 md:mb-16\">\n        <p className=\"text-sm font-medium text-muted-foreground\">{tagline}</p>\n        <h2 className=\"mt-2 text-3xl font-semibold tracking-tight md:text-4xl lg:text-5xl\">\n          {heading}\n        </h2>\n        {description && (\n          <p className=\"mt-4 text-muted-foreground\">{description}</p>\n        )}\n      </div>\n\n      {/* Steps Grid */}\n      <div className=\"grid gap-8 md:grid-cols-2 lg:grid-cols-4\">\n        {steps.map((step, index) => (\n          <StepCard\n            key={step.step}\n            step={step}\n            isLast={index === steps.length - 1}\n          />\n        ))}\n      </div>\n    </section>\n  );\n};\n\nexport { HowItWorks01 };\n",
